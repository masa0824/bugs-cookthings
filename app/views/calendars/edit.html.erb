<h1>カレンダー編集画面</h1>
<%= form_for @calendar,url:calendar_path(@calendar) do|f|%>
  <%= f.label :cook_at %>
  <%= raw sprintf(
    f.date_select(
      :cook_at,
      use_month_numbers: true,
      default:           Date.today,
      date_separator:    '%s'
    ),'年 ', '月 ') + '日'
  %> <%#スタートタイムの表示%>
  <%= f.submit "更新" %>
<% end %>