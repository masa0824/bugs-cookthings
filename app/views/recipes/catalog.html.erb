<div class="page_name">
  <h2>レシピ一覧</h2><i class="gg-coffee"></i>
</div>
<div id="catalog">
  <div class="grid">
    <div class="card">
      <div class="add"><%= image_tag 'sample_xd_new_add_recipe.png', :class => 'recipe-image' %>
      <%= link_to "レシピ新規追加", new_recipe_path(date_param: @cook_at), :class => 'link' %>
      </div>
    </div>
    <% @recipeTemplates.each do |r| %>
      <div class="card">
        <%= show_recipe_image(r) %>
        【登録レシピ】<%= r.recipe_name %> <%= link_to "[追加]", new_recipe_path(date_param: @cook_at, recipe_tpl_id: r.id), :class => 'link' %>
      </div>
    <% end %>
  </div>
</div>