<div id="day_catalog">
  <div class="grid">
    <div class="card">
      <div class="page_name">
        <h2><%= l @cook_at, format: :default %></h2>
      </div>
      <table>
        <% @recipes.each do |r| %>
          <tr>
            <th><%= r.category %></th>
            <td><%= link_to r.recipe_name, r, :class => 'link block' %></td>
          </tr>
        <% end %>
        <tr>
          <th>新規追加</th>
          <td data-title="レシピ追加" data-intro="クリックすると、レシピ追加画面が表示されます" data-step="F1"><%= link_to "+", catalog_recipe_path(date_param: @cook_at), :class => 'link block' %></td>
        </tr>
      </table>
    </div>
  </div>
</div>