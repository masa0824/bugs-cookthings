<h1>カレンダー編集画面</h1>
<%= form_for @recipe, url:recipe_path(@recipe) do |r| %>
  <%= r.label :cook_at %>
  <%= raw sprintf(
    r.date_select(
      :cook_at,
      use_month_numbers: true,
      default:           Date.today,
      date_separator:    '%s'
    ),'年 ', '月 ') + '日'
  %> <%#スタートタイムの表示%>
  </br>
  <%= r.label :recipe_name %>
  <%= r.text_field :recipe_name %>
  <br/>
  <%= r.label :category %>
  <%= r.text_field :category %>
  <br/>
  ------------材料------------
  <br/>
  <%= r.fields_for :food_stuffs do |food|%>
    <%= food.label :food_stuff %>
    <%= food.text_field :food_stuff %>
    <br/>
    <%= food.label :amount %>
    <%= food.number_field :amount %>
    <br/>
    <%= food.label :mass %>
    <%= food.text_field :mass %>
    <br/>
  <% end %>
  <%= r.submit "更新" %>
<% end %>