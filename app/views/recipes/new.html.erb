<h1>カレンダー新規登録</h1>
<div id="recipe-new">
  <div class="grid">
    <div class="card">
      <%= form_for @recipe do |r| %>
        <table>
          <tr>
            <th>調理日</th>
            <td>
              <%= raw sprintf(
                r.date_select(
                  :cook_at,
                  use_month_numbers: true,
                  default:           @cook_at,
                  date_separator:    '%s'
                ),'年 ', '月 ') + '日'
              %> <%#スタートタイムの表示%>  
            </td>
          </tr>
          
          <tr>
            <th>レシピ名</th>
            <td><%= r.text_field :recipe_name %></td>
          </tr>

          <tr>
            <th>カテゴリ</th>
            <td><%= r.text_field :category %></td>
          </tr>          
        </table>
          ------------材料------------
        <table id="food-stuff-table">
          <%= r.fields_for :food_stuffs do |food|%>
            <%= render "food_stuff_fields", f: food %>
          <% end %>
        </table>
        <%= link_to_add_fields "追加", r, :food_stuffs %>
        <%= r.submit "登録" %>
      <% end %>
    </div>
  </div>
</div>