<h1>カレンダー新規登録</h1>

<% if !@recipe.nil? %>
<ul>
<% @recipe.errors.full_messages.each do |message| %>
  <li><%= message %></li>
<% end %>
</ul>
<% end %>

<% if flash[:success] %>
<%= flash.now[:success] %>
<% end %>
<% if flash.now[:danger] %>
<%= flash.now[:danger] %>
<% end %>

<div id="recipe-new">
  <div class="grid">
    <div class="card">
      <% if @recipe.recipe_image.persisted? %>
        <%= cl_image_tag @recipe.recipe_image.key, :quality=>"auto", :fetch_format=>:auto, :class => 'recipe-image', :id => 'DISP_GAZOU' %>
      <% else %>
        <%= image_tag 'sample_xd_new_add_recipe.png', :class => 'recipe-image', :id => 'DISP_GAZOU' %>
      <% end %>
      <%= form_for @recipe do |r| %>
        <table id="recipe-table">
          <tr>
            <th>調理日</th>
            <td>
              <%= raw sprintf(
                r.date_select(
                  :cook_at,
                  use_month_numbers: true,
                  default:           @cook_at,
                  date_separator:    '%s'
                ),'年 ', '月 ') + '日'
              %> <%#スタートタイムの表示%>  
            </td>
          </tr>
          <tr>
            <th>レシピ画像</th>
            <% if @user_total_capacity < @user_limit_info['USER_LIMIT_CAPACITY']*1024*1024 %>
              <td><%= r.file_field :recipe_image, :id => 'GAZOU' %></td>
            <% else %>
              <td>利用容量を超えてます。既存の画像を削除して下さい。</td>
            <% end %>
          </tr>
          <tr>
            <th>レシピ名</th>
            <td><%= r.text_field :recipe_name %></td>
          </tr>
          <tr>
            <th>カテゴリ</th>
            <td><%= r.text_field :category %></td>
          </tr>
        </table>
          ------------材料------------
        <table id="food-stuff-table">
          <%= r.fields_for :food_stuffs do |food|%>
            <%= render "food_stuff_fields", f: food %>
          <% end %>
        </table>
        <div class="addBtn"><%= link_to_add_fields "追加", r, :food_stuffs %></div>
        
        <%= r.submit "完了", :class => 'btn finish-btn'%>
      <% end %>
    </div>
  </div>
</div>

<%= javascript_pack_tag 'regist_recipe', 'data-turbolinks-track': 'reload' %>