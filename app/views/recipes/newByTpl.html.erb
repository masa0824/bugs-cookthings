<h1>カレンダー新規登録</h1>
<div id="recipe-new">
  <div class="grid">
    <div class="card">
<% if false %>
      <% if @recipeTemplate.recipe_template_image.persisted? %>
        <%= cl_image_tag @recipeTemplate.recipe_template_image.key, :class => 'recipe-image', :id => 'DISP_GAZOU' %>
      <% else %>
        <%= image_tag 'sample_xd_new_add_recipe.png', :class => 'recipe-image', :id => 'DISP_GAZOU' %>
      <% end %>
<% end %>
      <%= image_tag 'sample_xd_new_add_recipe.png', :class => 'recipe-image', :id => 'DISP_GAZOU' %>
      <%= form_for @recipeTemplate, url: recipe_tplnew_path, method: 'post' do |r| %>
        <table id="recipe-table">
          <tr>
            <th>調理日</th>
            <td>
              <%= raw sprintf(
                r.date_select(
                  :cook_at,
                  use_month_numbers: true,
                  default:           @cook_at,
                  date_separator:    '%s'
                ),'年 ', '月 ') + '日'
              %> <%#スタートタイムの表示%>  
            </td>
          </tr>
          <tr>
            <th>レシピ画像</th>
            <td><%= r.file_field :recipe_image, :id => 'GAZOU' %></td>
          </tr>
          <tr>
            <th>レシピ名</th>
            <td><%= r.text_field :recipe_name %></td>
          </tr>
          <tr>
            <th>カテゴリ</th>
            <td><%= r.text_field :category %></td>
          </tr>          
        </table>
        ------------材料------------
        <table id="food-stuff-table">
          <%= r.fields_for :food_stuff_templates do |food|%>
            <%= render "food_stuff_template_fields", f: food %>
          <% end %>
        </table>
        <div class="addBtn"><%= link_to_add_fields "追加", r, :food_stuff_templates %></div>
        
        <%= r.submit "完了", :class => 'btn finish-btn'%>
      <% end %>
    </div>
  </div>
</div>
