<h1>登録レシピ</h1>
<div id="catalog">
  <div class="grid">
  
    <div class="card">
      <div class="add"><%= image_tag 'sample_xd_new_add_recipe.png', :class => 'recipe-image' %></div>
      <%= link_to "レシピ新規追加", regist_new_recipes_path, :class => 'link' %>
    </div>
    
    <% @recipeTemplates.each do |r| %>
      <div class="card">
          <% if r.recipe_template_image.persisted? %>
            <%= image_tag r.recipe_image, :class => 'recipe-image' %>
          <% else %>
            <%= image_tag 'sample_xd_new_add_recipe.png', :class => 'recipe-image' %>
          <% end %>
          <%= r.recipe_name %> [編集] [コピー]
          <!--
          <%= button_to r.recipe_name, copy_recipe_path(r, date_param: @cook_at), :class => 'link' %>
          -->
      </div>
    <% end %>
  </div>
</div>