<%# 参考：https://codepen.io/kei_01011/pen/PravQg %>
<div class="news">
  <ul>
    <li>
        <span>記事ナンバー</span>
        <time datetime="">[ 日付 ]</time>
        <p>タイトル</p>
    </li>
    <% news_list.each do |news| %>
    <li>
        <span><%= news.id %></td></span>
        <time datetime="<%= news.news_date.strftime('%Y/%m/%d') %>"><%= news.news_date.strftime('%Y/%m/%d') %></time>
        <%= link_to article_path(news.id) do %>
          <p><%= news.title %><p>
        <% end %>
    </li>
    <% end %>
  </ul>
  <%= paginate news_list %>
</div>