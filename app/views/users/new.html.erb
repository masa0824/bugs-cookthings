<ul>
<% @user.errors.full_messages.each do |message| %>
  <li><%= message %></li>
<% end %>
</ul>


<div id="users">
  <div class="contents-wrapp">
    <% if flash.now[:danger] %>
      <%= flash.now[:danger] %>
    <% end %>
    <%= form_for(@user) do |f| %>
      <div class="input-form">
        <%= f.email_field :email, :placeholder => 'メールアドレス', :class => 'input-field' %>
        <%= f.password_field :password, :placeholder => 'パスワード', :class => 'input-field' %>

        <%= f.submit "登録", :class => 'btn create-btn' %>
      </div>
    <% end %>
  </div>
</div>